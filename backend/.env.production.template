# Production Environment Configuration Template
# Copy this to .env in production and fill in your actual values

NODE_ENV=production
PORT=80

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sustainhub?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Optional: Logging level
LOG_LEVEL=info

# CORS Origins (comma-separated for multiple origins)
ALLOWED_ORIGINS=https://sustainhub-frontend.pages.dev,https://your-custom-domain.com
